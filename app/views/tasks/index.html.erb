<h1>My tasks</h1>
<div class="form-check">
<ul>
  <% @tasks.each do |task| %>
    <li>
    <input class="form-check-input" type="checkbox" value="" <% if task.completed == true %>
    id="flexCheckChecked" checked
    <% else %>
    id="flexCheckDefault"
    <% end %>
    >
      <%= link_to task.title, task_path(task) %> -
      <%= link_to task_path(task), method: :delete,
            data: { confirm: "Are you sure you want to delete the task: #{task.title}?" } do %>
            <i class="fas fa-trash-alt"></i>
            <% end %>
    </li>
  <% end %>
</ul>
</div>

<%= link_to "+ Add a new task", tasks_new_path %>
